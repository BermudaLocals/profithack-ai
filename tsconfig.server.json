{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./server",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["server/shared/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client"]
}
